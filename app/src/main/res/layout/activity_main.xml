<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/activity_vertical_margin"
      android:paddingBottom="?attr/actionBarSize"
      android:orientation="vertical">
   <Button
       android:id="@+id/TextView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Widget TextView"
       android:layout_marginTop="@dimen/activity_vertical_margin"
       android:textColor="#313131"
       android:background="@drawable/radius"
       />
   <Button
       android:id="@+id/ImageView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Widget ImageView"
       android:layout_marginTop="@dimen/activity_vertical_margin"
       android:textColor="#313131"
       android:background="@drawable/radius"/>
   <Button
       android:id="@+id/ImageButton"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Widget ImageButton"
       android:layout_marginTop="@dimen/activity_vertical_margin"
       android:textColor="#313131"
       android:background="@drawable/radius"/>
   <Button
       android:id="@+id/EditText"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Widget EditText"
       android:layout_marginTop="@dimen/activity_vertical_margin"
       android:textColor="#313131"
       android:background="@drawable/radius"/>
   <Button
       android:id="@+id/CheckBox"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Widget CheckBox"
       android:layout_marginTop="@dimen/activity_vertical_margin"
       android:textColor="#313131"
       android:background="@drawable/radius"/>
   <Button
       android:id="@+id/RadioButton"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Widget RadioButton"
       android:layout_marginTop="@dimen/activity_vertical_margin"
       android:textColor="#313131"
       android:background="@drawable/radius"/>
   <Button
       android:id="@+id/DatePicker"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Widget DatePicker"
       android:layout_marginTop="@dimen/activity_vertical_margin"
       android:textColor="#313131"
       android:background="@drawable/radius"/>
   <Button
       android:id="@+id/TimePicker"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Widget TimePicker"
       android:layout_marginTop="@dimen/activity_vertical_margin"
       android:textColor="#313131"
       android:background="@drawable/radius"/>
   <Button
       android:id="@+id/SwichButton"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Widget SwichButton"
       android:layout_marginTop="@dimen/activity_vertical_margin"
       android:textColor="#313131"
       android:background="@drawable/radius"/>
   <Button
       android:id="@+id/DigitalClock"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Widget DigitalClock"
       android:layout_marginTop="@dimen/activity_vertical_margin"
       android:textColor="#313131"
       android:background="@drawable/radius"/>
   <Button
       android:id="@+id/AnalogClock"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Widget AnalogClock"
       android:layout_marginTop="@dimen/activity_vertical_margin"
       android:textColor="#313131"
       android:background="@drawable/radius"/>
s  </LinearLayout>
</ScrollView>